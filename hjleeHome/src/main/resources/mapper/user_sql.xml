<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="userInfo">
	<select id="selectUserById" resultType="com.hjlee.home.security.vo.CustomUserDetails">
		SELECT 
			USER_ID as userId
			,USER_PASSWORD as password
			,USER_NAME AS userName
			,AUTHORITY as authorities
			,ENABLED as enabled
			,EMAIL as email
		FROM USER_TB 
		WHERE USER_ID = #{ userid} 
	</select>

	<insert id="insertUserInfo" parameterType="com.hjlee.home.security.vo.CustomUserDetails">
		INSERT INTO USER_TB 
		(USER_ID,USER_NAME,USER_PASSWORD,AUTHORITY,EMAIL)
		VALUES
		(#{userid},#{username},#{password},'ROLE_USER',#{email})
	</insert>

</mapper> 